<h1><%= @project.name %></h1>

<p><strong>Description:</strong> <%= @project.description %></p>

<%= link_to "Back", projects_path %>

<h2>Tasks for <%= @project.name %></h2>

<%= link_to "New Task", new_project_task_path(@project), class: "btn btn-primary" %>

<% @project.tasks.each do |task| %>
  <div class="record">
    <p><%= task.id %>. <%= task.name %></p>
    <p><%= task.description %></p>
    <p><%= task.status %></p>
    <p><%= task.deadline_at %></p>
    <%= link_to "Show", url_for([@project, task]) %>
    <%= link_to "Edit", edit_project_task_path(@project, task) %>
    <%= link_to "Destroy", url_for([@project, task]), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>


