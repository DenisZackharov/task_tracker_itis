<h1><%= @project.name %></h1>

<p><strong>Description:</strong> <%= @project.description %></p>

<%= link_to "Back", projects_path %>

<h2>Tasks for <%= @project.name %></h2>


<h4><%= link_to "Project Tasks", project_tasks_path(@project), class: "btn btn-primary" %></h4>

<h3><%= link_to "New Task", new_project_task_path(@project), class: "btn btn-primary" %></h3>


<div style="text-align:left;">
<%= link_to "Name", :sort => "name asc"%>
<%= link_to "Name reverse", :sort => "name desc"%>
<%= link_to "Create", :sort => "created_at asc" %>
<%= link_to "Create reverse", :sort => "created_at desc" %>
<%= link_to "Deadline", :sort => "deadline_at desc" %>
<%= link_to "Deadline reverse", :sort => "deadline_at asc" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Deadline</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody> 
    <% @tasks.each do |task| %>   <%# Не понял где именно надо делать пагинацию и сортировку для тасков так что сделал и тут и в tasks/index.html.erb %> 
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.status ? "Completed" : "Not Completed" %></td>
        <td><%= task.deadline_at %></td>
        <td>
          <%= link_to "Show", project_task_path(@project, task), class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_project_task_path(@project, task), class: "btn btn-warning btn-sm" %>
          <%= link_to "Destroy", project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks%>


