<%= form_with(model: [project, task], local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :state %>
  <%= form.check_box :state %>

  <%= form.label :deadline %>
  <%= form.date_field :deadline %>

  <%= form.submit %>
<% end %>
