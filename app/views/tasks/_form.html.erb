<%= form_with(model: @task, url: project_tasks_path(@project)) do |form| %>
  

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ["Unstarted", "Started", "Done"] %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<% task.errors.each do |error| %>
  <li><%= error.full_message %></li>
<%end%>

<%= link_to "Back", projects_path %>
