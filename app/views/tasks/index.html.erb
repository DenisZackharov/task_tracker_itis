
<h1>Tasks for <%= @project.name %></h1>

<div class="sorting-btns">
  <%= link_to "Title", :sort => "task_title asc", class: "sorting-btn"%>
  <%= link_to "Description", :sort => "task_Description desc", class: "sorting-btn"%>
  <%= link_to "Creation Date", :sort => "created_at asc", class: "sorting-btn"%>
  <%= link_to "Deadline", :sort => "deadline desc", class: "sorting-btn"%>
</div>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Deadline</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task_title %></td>
      <td><%= task.task_description %></td>
      <td>
        <% case task.state %>
        <% when 'Just Started' %>
        <td>Just Started</td>
      <% when 'In progress' %>
        <td>In Progress</td>
      <% when 'Done' %>
        <td>Done</td>
      <% end %>
      </td>
      <td><%= task.deadline %></td>
      <td><%= link_to "Show", url_for([@project, task]) %></td>
      <td><%= link_to "Edit", edit_project_task_path(@project, task) %></td>
      <td><%= link_to "Destroy", url_for([@project, task]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @tasks%>
<%= link_to "Back to Project", project_path(@project) %>

<section class="new-task">
  <h2>Add a new task</h2>
  <div class="form">
    <%= render partial: 'tasks/form', locals: {project: @project} %>
  </div>
</section>
