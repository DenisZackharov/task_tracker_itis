
<h1><%= @task.name %></h1>
<p>
  <%= @task.description %>
</p>

<p>
  <strong>Project: </strong>
  <%= @task.project.name %>
</p>

<p>
  <strong>State: </strong>
  <%= @task.status %>
</p>
<p>
  <Strong>Deadline: </Strong>
  <%= @task.deadline_at %>
</p>


<%= link_to 'Edit', edit_project_task_path(@task.project, @task) %>
